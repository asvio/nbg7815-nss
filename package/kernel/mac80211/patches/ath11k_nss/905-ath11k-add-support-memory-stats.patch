+	struct ath11k_memory_stats *memory_stats = &ab->memory_stats;
+	int len = 0, retval;
+	const int size = 4096;
+
+	char *buf;
+
+	buf = kzalloc(size, GFP_KERNEL);
+	if (!buf)
+		return -ENOMEM;
+
+	len += scnprintf(buf + len, size - len, "MEMORY STATS IN BYTES:\n");
+	len += scnprintf(buf + len, size - len, "malloc size : %u\n",
