+
+static ssize_t
+ath11k_debug_write_enable_memory_stats(struct file *file,
+				       char __user *ubuf,
+				       size_t count, loff_t *ppos)
+{
+	struct ath11k_base *ab = file->private_data;
+	bool enable;
+	int ret;
+
+	if (kstrtobool_from_user(ubuf, count, &enable))
+		return -EINVAL;
+
+	if (enable == ab->enable_memory_stats) {
+		ret = count;
+		goto exit;
+	}
