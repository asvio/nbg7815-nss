+	struct ath11k_base *ab = file->private_data;
+	char buf[10];
+	size_t len;
+
+	len = scnprintf(buf, sizeof(buf), "%d\n", ab->enable_memory_stats);
+
+	return simple_read_from_buffer(user_buf, count, ppos, buf, len);
